<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.nomi.tictactoe.TwoPlayer">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Player One&apos;s Turn"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#f7f3f3" />

    <ImageButton
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="New Button"
        android:id="@+id/a0Button"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="43dp"
        android:onClick="a0Click"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:background="#fffefe" />

    <ImageButton
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/b0Button"
        android:onClick="b0Click"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:background="#fffefe"
        android:layout_alignTop="@+id/a0Button"
        android:layout_toRightOf="@+id/a0Button"
        android:layout_toEndOf="@+id/a0Button" />

    <ImageButton
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/c0Button"
        android:layout_alignBottom="@+id/b0Button"
        android:layout_toRightOf="@+id/b0Button"
        android:layout_toEndOf="@+id/b0Button"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:background="#fffefe"/>

    <ImageButton
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/a1Button"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:background="#fffefe"
        android:layout_below="@+id/a0Button"
        android:layout_toLeftOf="@+id/b0Button"
        android:layout_toStartOf="@+id/b0Button" />

    <ImageButton
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/b1Button"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:background="#fffefe"
        android:layout_below="@+id/b0Button"
        android:layout_toRightOf="@+id/a1Button"
        android:layout_toEndOf="@+id/a1Button" />

    <ImageButton
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/c1Button"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:background="#fffefe"
        android:layout_below="@+id/c0Button"
        android:layout_toRightOf="@+id/b1Button"
        android:layout_toEndOf="@+id/b1Button" />

</RelativeLayout>
